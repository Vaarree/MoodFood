<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/restaurant_entry"
        android:backgroundTint="#FF0000"
        android:padding="20dp"
        android:weightSum="100">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView_restaurantList_name"
            android:textSize="11pt"
            android:textStyle="bold"
            android:text="Rest_name"
            android:layout_weight="50"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView_restaurantList_address"
                android:text="Restaurant_address"
                android:layout_weight="25"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView_restaurantList_tags"
                android:layout_weight="25"
                android:text="restaurant_tags"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView_restaurantList_vibe"
                android:layout_weight="25"
                android:text="restaurant_vibe"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView_restaurantList_location"
                android:layout_weight="25"
                android:text="restaurant_location"
                android:textColor="#FFFFFF"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>