<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/foodcover"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What type of food do you want right now?"
        android:textSize="13pt"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FF0000"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rg_foodType"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rbtn_foodType_steaks"
                android:text="Steaks"
                android:textColor="#FF0000"
                android:buttonTint="#FF0000"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rbtn_foodType_salads"
                android:text="Salads"
                android:textColor="#FF0000"
                android:buttonTint="#FF0000"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rbtn_foodType_fastFoods"
                android:text="Fast Foods"
                android:textColor="#FF0000"
                android:buttonTint="#FF0000"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rbtn_foodType_pizzaPasta"
                android:text="Pizza and Pasta"
                android:textColor="#FF0000"
                android:buttonTint="#FF0000"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rbtn_foodType_healthy"
                android:text="Healthy Dining"
                android:textColor="#FF0000"
                android:buttonTint="#FF0000"/>

        </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_whatToEat_back"
            android:text="back"
            android:background="@drawable/restaurant_entry"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_whatToEat_next"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:background="@drawable/restaurant_entry"
            android:backgroundTint="#FF0000" />

    </LinearLayout>




</LinearLayout>